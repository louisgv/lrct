{
  "compilerOptions": {
    "baseUrl": "src",
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es6", "es5", "es2017"],
    "declaration": true,
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "listEmittedFiles": true,
    "jsx": "react",
    "types": [],
    "typeRoots": ["src/typings"],
    "sourceMap": false,
    "noImplicitAny": true,
    "emitDeclarationOnly": true
  },
  "exclude": [
    "*/**/node_modules",
    "*/**/test",
    "!node_modules/@types",
    "!node_modules/@jest",
    "*/**/*.stories.tsx"
  ],
  "include": ["./src"]
}
